{
  "name": "waves-forecast-api",
  "version": "1.0.0",
  "description": ":surfer: API to find out the best beaches to surf",
  "main": "index.js",
  "scripts": {
    "build": "npx tsc",
    "start": "npm run build && node dist/src/index.js",
    "start:dev": "ts-node-dev 'src/index.ts'",
    "lint": "eslint ./src ./test --ext .ts",
    "lint:fix": "eslint ./src ./test --ext .ts --fix",
    "test": "npm run test:unit && npm run test:e2e",
    "test:e2e": "jest --projects ./test --runInBand",
    "test:unit": "jest",
    "style:check": "prettier --check 'src/**/*.ts' 'test/**/*.ts'",
    "style:fix": "prettier --write 'src/**/*.ts' 'test/**/*.ts'"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/diglopes/waves-forecast-api.git"
  },
  "keywords": [
    "typescript",
    "api",
    "forecast"
  ],
  "author": "Diego Lopes",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/diglopes/waves-forecast-api/issues"
  },
  "homepage": "https://github.com/diglopes/waves-forecast-api#readme",
  "devDependencies": {
    "@types/axios": "^0.14.0",
    "@types/config": "0.0.36",
    "@types/express": "^4.17.7",
    "@types/jest": "^26.0.10",
    "@types/module-alias": "^2.0.0",
    "@types/mongoose": "^5.7.36",
    "@types/nock": "^11.1.0",
    "@types/node": "^14.6.0",
    "@types/supertest": "^2.0.10",
    "@typescript-eslint/eslint-plugin": "^3.9.1",
    "@typescript-eslint/parser": "^3.9.1",
    "eslint": "^7.7.0",
    "jest": "^26.4.0",
    "nock": "^13.0.4",
    "prettier": "^2.0.5",
    "supertest": "^4.0.2",
    "ts-jest": "^26.2.0",
    "ts-node-dev": "^1.0.0-pre.58",
    "typescript": "^3.9.7"
  },
  "dependencies": {
    "@overnightjs/core": "^1.7.4",
    "axios": "^0.19.2",
    "config": "^3.3.1",
    "express": "^4.17.1",
    "module-alias": "^2.2.2",
    "mongoose": "^5.10.0"
  }
}
